body
  position relative
  overflow hidden
  width 100%
  height 100vh
  margin 0
  padding 0
  background-repeat no-repeat
  background-position center center
  -webkit-background-size cover
  -o-background-size cover
  background-size cover
  display -webkit-flex
  display -moz-flex
  display -ms-flex
  display -o-flex
  display flex
  -webkit-flex-direction column
  -ms-flex-direction column
  flex-direction column
  -webkit-align-items center
  align-items center
  -webkit-justify-content center
  justify-content center
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box
  font-family 'PT Sans', sans-serif
  
p,
#finalScore
  font 26px/32px 'Pt Sans', sans-serif
  color #fff
  // text-shadow 0 1px 1px #000
  
h1
  font 82px/92px 'Bilbo Swash Caps', serif
  color #fff
  // text-shadow 0 1px 1px #000

#game
  position relative

.end-game
  position fixed
  text-align center
  top 0
  left 0
  width 100%
  height 100%
  background #f07562
  display -webkit-flex
  display -moz-flex
  display -ms-flex
  display -o-flex
  display flex
  -webkit-flex-direction column
  -ms-flex-direction column
  flex-direction column
  -webkit-align-items center
  align-items center
  -webkit-justify-content center
  justify-content center
  padding 25px
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

  opacity 0
  z-index 0 

.reveal-end-game
  opacity 1
  //pointer-events all

.display-none
  display none

.play-again
  font 400 22px/30px sans-serif
  color #58b996
  padding 5px 10px
  margin-top 20px
  border 4px solid #58b996
  -webkit-border-radius 4px
          border-radius 4px
  background #fff
  text-decoration none
  text-transform uppercase

  -webkit-transition 0.3s all ease-out
  -moz-transition 0.3s all ease-out
  -ms-transition 0.3s all ease-out
  -o-transition 0.3s all ease-out
  transition 0.3s all ease-out

.play-again:hover
  color #fff
  border-color #fff
  background #58b996
  
.timer-container
  position fixed
  z-index 10
  top 2px
  right 50px 


#timer
  display -webkit-flex
  display -moz-flex
  display -ms-flex
  display -o-flex
  display flex
  -webkit-flex-direction column
  -ms-flex-direction column
  flex-direction column
  -webkit-align-items center
  align-items center
  -webkit-justify-content center
  justify-content center
    
  #seconds
    font 700 26px/26px 'PT Sans', sans-serif
    color #f07562
  
  #timeLeft
    font 400 16px/32px 'PT Sans', sans-serif
    color #fff

// mobile d pad
.directional-pad
  position fixed
  left 50%
  top 90%
  z-index 2
  -webkit-transform translate(-50%, -50%)
  -moz-transform translate(-50%, -50%)
  -ms-transform translate(-50%, -50%)
  -o-transform translate(-50%, -50%)
  transform translate(-50%, -50%)
  display none
  -webkit-flex-direction column
  -ms-flex-direction column
  flex-direction column
  -webkit-align-items center
  align-items center
  -webkit-justify-content center
  justify-content center
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

.d-pad-btn
  padding 0
  margin 5px

.left-right .d-pad-btn
  display inline-block

.left-right .d-pad-btn:last-child
  margin-left 40px

#top
  width 0
  height 0
  border-style solid
  border-width 0 15px 30px 15px
  border-color transparent transparent #fff transparent

#down
  width 0
  height 0
  border-style solid
  border-width 30px 15px 0 15px
  border-color #fff transparent transparent transparent

#left
  width 0
  height 0
  border-style solid
  border-width 15px 30px 15px 0
  border-color transparent #fff transparent transparent

#right
  width 0
  height 0
  border-style solid
  border-width 15px 0 15px 30px
  border-color transparent transparent transparent #fff

@media screen and (max-width 480px)
  body
    background-color #fff
    background-image url('../images/bg-ice-tile-x.jpg')
    
  .timer-container
    right -2px

  canvas
    width 100%
    max-width 100%
    height auto
  
  .directional-pad
    display -webkit-flex
    display -moz-flex
    display -ms-flex
    display -o-flex
    display flex


@import 'base'